<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FC">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ADD8E6"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/logoApp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icons8_drugs_48" />

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="@string/app_name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center_vertical" />

        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/reminder" />
    </LinearLayout>

    <!-- Countdown Timer -->
    <TextView
        android:id="@+id/countdownTimer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Waktu selanjutnya: 00:00:00"
        android:textSize="18sp"
        android:textColor="#D32F2F"
        android:gravity="center"
        android:padding="12dp"
        android:background="#FFF3E0"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Form Input -->
    <LinearLayout
        android:id="@+id/inputSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/countdownTimer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/titleReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/judul1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="16dp" />
        <Spinner
            android:id="@+id/NamaObat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />
        <EditText
            android:id="@+id/edtNamaObatLain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan nama obat"
            android:visibility="gone"
            android:layout_marginTop="8dp" />

        <Spinner
            android:id="@+id/Dosis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dosis"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />
        <EditText
            android:id="@+id/edtDosisLain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan dosis obat lainnya"
            android:visibility="gone" />


        <EditText
            android:id="@+id/edtStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tanggal Mulai"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:focusable="false"
            android:clickable="true"/>

        <EditText
            android:id="@+id/edtEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tanggal Selesai"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:focusable="false"
            android:clickable="true"/>

        <EditText
            android:id="@+id/edtWaktu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pilih Waktu Konsumsi"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:focusable="false"
            android:clickable="true" />

        <Button
            android:id="@+id/btnSimpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simpan Pengingat"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />
    </LinearLayout>
    <!-- Grafik -->
    <LinearLayout
        android:id="@+id/graphSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/inputSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/graphTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grafik Penggunaan"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="16dp" />

        <!-- Bar 1 -->
        <LinearLayout
            android:id="@+id/bar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/obatA"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sudah Diminum"
                android:textColor="#333333" />

            <View
                android:id="@+id/obatABar"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:background="#FF5722" />
        </LinearLayout>

        <!-- Bar 2 -->
        <LinearLayout
            android:id="@+id/bar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/obatB"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Belum Diminum"
                android:textColor="#333333" />

            <View
                android:id="@+id/obatBBar"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:background="#87CEEB" />
        </LinearLayout>

    </LinearLayout>




    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/buttonSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="4dp">

        <!-- HOME -->
        <LinearLayout
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="2dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/home"
                android:contentDescription="Home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="10sp"
                android:textColor="#FF5722"/>
        </LinearLayout>

        <!-- STOCK -->
        <LinearLayout
            android:id="@+id/btnStockObat"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="2dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/pills"
                android:contentDescription="Stock" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stock"
                android:textSize="10sp"
                android:textColor="#4CAF50"/>
        </LinearLayout>

        <!-- HISTORY -->
        <LinearLayout
            android:id="@+id/btnHistory"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="2dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/history"
                android:contentDescription="History" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:textSize="10sp"
                android:textColor="#2196F3"/>
        </LinearLayout>

        <!-- PROFIL -->
        <LinearLayout
            android:id="@+id/btnProfil"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="2dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/setting"
                android:contentDescription="Profil" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profil"
                android:textSize="10sp"
                android:textColor="#9C27B0"/>
        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
